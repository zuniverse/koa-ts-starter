{
  "name": "koa-ts-tutorial",
  "version": "1.0.0",
  "description": "Koa Typescript Starter Kit",
  "main": "index.js",
  "license": "MIT",
  "keywords": [],
  "author": "",
  "dependencies": {
    "formidable": "^3.2.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.3.0",
    "koa2-cors": "^2.0.5",
    "redis": "^4.0.1",
    "ts-node": "^3.3.0",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.42",
    "@types/koa2-cors": "^2.0.1",
    "@types/node": "^10.14.12",
    "@types/redis": "^2.8.13",
    "@types/supertest": "^2.0.8",
    "husky": "^1.3.1",
    "jest": "^27.4.5",
    "prettier": "1.15.1",
    "pretty-quick": "^1.11.1",
    "supertest": "^4.0.2",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.0.0-pre.40"
  },
  "scripts": {
    "build": "tsc --build",
    "start": "ts-node-dev src/server.ts",
    "test": "NODE_ENV=test PORT=7788 jest",
    "test:watch": "npm run test -- --watchAll"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "roots": [
      "<rootDir>/__tests__"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zuniverse/koa-ts-starter.git"
  },
  "bugs": {
    "url": "https://github.com/zuniverse/koa-ts-starter/issues"
  },
  "homepage": "https://github.com/zuniverse/koa-ts-starter#readme"
}
